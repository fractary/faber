{
  "$schema": "https://fractary.dev/schemas/faber/gateway-config.schema.json",
  "version": "1.0",
  "description": "FABER Event Gateway configuration",

  "backends": {
    "local_files": {
      "enabled": true,
      "description": "Store events in local filesystem",
      "config": {
        "base_path": ".fractary/faber/runs",
        "sync_writes": true
      }
    },

    "s3_archive": {
      "enabled": false,
      "description": "Archive events to S3 (optional)",
      "config": {
        "bucket": "${FRACTARY_S3_BUCKET:-fractary-workflow-logs}",
        "prefix": "faber/runs/",
        "region": "${AWS_REGION:-us-east-1}",
        "consolidate_on_complete": true,
        "cleanup_local_after_archive": false
      }
    }
  },

  "event_retention": {
    "local_days": 30,
    "archive_days": 365
  },

  "mcp_server": {
    "transport": "stdio",
    "name": "fractary-faber",
    "version": "1.0.0"
  },

  "logging": {
    "level": "info",
    "format": "json"
  }
}
